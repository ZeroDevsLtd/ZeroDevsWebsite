            '<p><strong>Address:</strong> House #512(3rd-floor), Road #07, Avenue #03, Mirpur DOHS, Pallabi, Dhaka 1216</p>'+
            '</div>' +
            '</div>';

        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position: zerodevs,
            map: map,
            title: 'Ruby on Rails Software Company'
        });
        marker.addListener('click', function () {
            infowindow.open(map, marker);
        });
        infowindow.open(map, marker);

    }
</script>
