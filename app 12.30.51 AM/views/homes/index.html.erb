            zoom: 15,
            center: zerodevs
        });
        var marker = new google.maps.Marker({
            position: zerodevs,
            map: map
        });
        var contentString = '<div id="content">' +
            '<div id="siteNotice">' +
            '</div>' +
            '<h5 id="firstHeading" class="firstHeading text-center primary-color">Syftet Ltd</h5>' +
