$('#name, #email, #position, #cv, #message').val('');

<% if @applyinfo.present? %>
var type = 'danger'
var msg = 'Unable to send! Please try again later.'
<% else  %>
var type = 'success'
var msg = 'Your message has been sent.'
<% end %>


Command: toastr[type](msg)
toastr.options = {
    "closeButton": true,
    "debug": false,
    "newestOnTop": false,
    "progressBar": true,
    "positionClass": "toast-top-right",
    "preventDuplicates": false,
    "showDuration": "300",
    "hideDuration": "1000",
    "timeOut": "5000",
    "extendedTimeOut": "1000",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
}
