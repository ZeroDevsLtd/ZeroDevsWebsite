$('#messageid, #telephoneid, #emailid, #textid ').val('');

<% if @contactinfo.errors.any? %>
var type = "danger";
var msg = "Unable to send! Try again later.";
<% else %>
var type = "success";
var msg = "<%= @contactinfo.name.capitalize %> thank you for your message. It has been sent.";
<% end %>

Command: toastr[type](msg)
toastr.options = {
    "closeButton": true,
    "debug": false,
    "newestOnTop": false,
    "progressBar": true,
    "positionClass": "toast-top-right",
    "preventDuplicates": false,
    "showDuration": "300",
    "hideDuration": "1000",
    "timeOut": "5000",
    "extendedTimeOut": "1000",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
}
